# vi: ft=nginx

### Redirects ###
server {
    listen         80;
    server_name    nopages.net www.nopages.net;
    return         301 https://www.nopages.net$request_uri;
}

# Change naked domain to www
server {
    listen          443 ssl;
    http2           on;
    server_name     nopages.net;

    include snippets/ssl.conf;
    resolver 127.0.0.1 [::1];

    rewrite         ^ https://www.nopages.net$request_uri;
}


### Servers ###

server {
    listen          443 ssl;
    http2           on;
    server_name     www.nopages.net;
    access_log      /var/log/nginx/nopages/nopages.access.log;
    error_log       /var/log/nginx/nopages/nopages.error.log;

    include snippets/ssl.conf;
    include snippets/gzip.conf;
    resolver 127.0.0.1 [::1];

    location / {
        include          snippets/headers.conf;
        proxy_pass       http://127.0.0.1:5019;
        proxy_buffering  off;
        add_header       'Cache-Control'                 'public';
        expires          7d;
    }

    location /static/ {
        include          snippets/headers.conf;
        alias            /home/albertyw/nopages/static/mount/;
        add_header       'Access-Control-Allow-Origin'   'https://www.nopages.net';
        add_header       'Access-Control-Allow-Methods'  'GET, HEAD, OPTIONS';
        add_header       'Access-Control-Allow-Headers'  'range';
        add_header       'Access-Control-Expose-Headers' 'content-length';
        add_header       'Access-Control-Max-Age'        '1728000';
        add_header       'Cache-Control'                 'public';
        expires          24h;
    }
}
